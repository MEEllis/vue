.col1 {
  color: #ffaf23;
}

.col2 {
  color: #3384d6;
}

.col3 {
  color: #46be8a;
}

.detail-head {
  font-size: 28rpx;
  background-image: linear-gradient(0deg, #1890ff 0%, #21a4ff 100%);
  padding: 20rpx 30rpx;
}

.detail-head .title {
  color: #e6e6e6;
  font-size: 32rpx;
  text-align: right;
}

.detail-head .desc {
  color: #fff;
  font-size: 32rpx;
  -webkit-box-flex: 3;
  -webkit-flex: 3;
  flex: 3;
}

.detail-body {
  padding: 0 20rpx;
}

.table-head {
  background-image: linear-gradient(0deg, #1890ff 0%, #21a4ff 100%);
	box-shadow: 0px 5px 18px 0px 
		rgba(79, 94, 191, 0.3);
	border-radius: 12rpx;
  color: #fff;
  font-size: 28rpx;
  padding: 20rpx 30rpx;
}

.table-head .weui-flex {
  align-items: center;
}

.icon-shouji1 {
  color: #fff;
  font-size: 48rpx;
  margin-right: 10rpx;
}

.outstock-item {
  position: relative;
}

.outstock-item::before {
  content: " ";
  position: absolute;
  right: -30rpx;
  left: -30rpx;
  height: 1px;
  border-top: 1rpx solid #e6e6e6;
  bottom: 0;
}

.outstock-item:last-child::before {
  border-top: 1rpx solid transparent;
}

.table-body {
  padding: 0 30rpx;
  background-color: #fff;
  border-radius: 0px 0px 12rpx 12rpx;
  font-size: 28rpx;
}

.table-body .index {
  display: inline-block;
  min-width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  border: 1px solid #ffaf23;
  border-radius: 50%;
  text-align: center;
}

.item-title {
  padding: 30rpx 0;
  position: relative;
}

.item-title::before {
  content: " ";
  position: absolute;
  left: 0rpx;
  right: 0;
  bottom: 0;
  height: 1px;
  color: #e6e6e6;
  border-top: 1rpx dashed #e6e6e6;
}

.item-body {
  padding: 15rpx 0;
}

.item-body .weui-flex {
  padding: 10rpx 0;
}
