image {
  width: 84rpx;
  height: 84rpx;
  display: block;
  line-height: 1;
  margin: 0 auto;
}

.report-wrap {
  color: #000;
  font-size: 28rpx;
  background-color: #fff;
}

.report-body-title {
  color: #333;
  font-size: 30rpx;
  padding: 24rpx 20rpx;
  position: relative;
}

.report-body-title::after {
  content: " ";
  width: 8rpx;
  height: 32rpx;
  background-image: linear-gradient(95deg, #18a0ff 0%, #62c0fe 100%);
  position: absolute;
  top: 24rpx;
  left: 0rpx;
}

.report-body-title .weui-flex__item {
  line-height: 1;
}

.report-body .weui-flex {
  padding: 24rpx 0rpx 24rpx 0rpx;
}
