.weui-navbar__slider {
  width: 375rpx;
}

.weui-navbar__slider.ck {
  width: 250rpx;
}

.pie-wrap {
  width: 100%;
  padding: 20rpx 0rpx;
}

.pie-wrap ec-canvas {
  margin: 0 auto;
}

.scroll-wrap {
  padding: 0rpx 20rpx;
}

.scroll-con {
  padding: 0rpx 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  line-height: 72rpx;
  font-size: 24rpx;
}

.top {
  width: 24rpx;
  height: 24rpx;
  display: inline-block;
  border-radius: 50%;
  position: relative;
  top: 8rpx;
}

.compare-wrap {
  background-color: #fff;
  line-height: 64rpx;
  font-size: 26rpx;
  padding: 25rpx 30rpx 0 30rpx;
}

.compare-wrap picker {
  background-color: #fff;
  border-radius: 6rpx;
  border: solid 1rpx #d9d9d9;
  font-size: 28rpx;
  max-width: 194rpx;
  text-align: center;
  margin: 0 10rpx;
}

.groupField-wrap {
  padding: 20rpx 30rpx;
  background-color: #fff;
  box-shadow: 0px -5rpx 5rpx 0px rgba(128, 128, 128, 0.2);
  margin-top: 3px;
}

.groupField-wrap button {
  border-radius: 6rpx;
  background-color: #fff;
  font-size: 26rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.groupField-wrap button.on {
  background-color: #21a4ff;
  color: #fff;
}

.groupField-wrap button::after {
  border: none !important;
}
