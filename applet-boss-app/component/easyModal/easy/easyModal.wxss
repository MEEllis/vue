/* common/component/customModal.wxss */

.modal-header{
    background: #fff;
    color:  #000;
    border-bottom: 1rpx solid #ccc;
    padding: 20rpx;
    text-align: center;
    border-top-left-radius: 10rpx;
    border-top-right-radius: 10rpx;  
}

.modal-body{
  background: #ffffff;  
}

.modal-footer{
   background: #ffffff;
  flex-direction: row;
  display: flex;
  align-items: center;
  width: 100%;  
  border-top : 1rpx solid #e5e5e5;   
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;  
}

.modal-footer .btn{
  border-right:1rpx  solid #e5e5e5;
}
.modal-footer .btn:last-child{
  border-right:none;
}
 
.btn{ 
  flex: 1; 
  text-align: center;   
  padding:  19rpx 5rpx;
}

.btn-primary{
    color: #00A7F7;   
    font-weight: bold;   
}

