.sel-time::after {
  content: " ";
  position: absolute;
  left: 0rpx;
  right: 0rpx;
  top: 0;
  height: 1px;
  color: #e6e6e6;
  border-bottom: 1rpx solid #e6e6e6;
}

.list-item-title {
  border-bottom: 1rpx solid #e6e6e6;
  color: #1a1a1a;
  padding: 10rpx 0rpx 20rpx 0rpx;
}

.list-item-title .title {
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #1a1a1a;
}

.list-item-title .weui-flex {
  align-items: center;
}

.list-item {
  background-color: #fff;
  padding-left: 30rpx;
  margin-top: 20rpx;
}

.list-item:first-child {
  margin-top: 0rpx;
}

.list-item-body {
  font-size: 28rpx;
  padding-bottom: 20rpx;
  color: #333;
}

.list-item-body .weui-flex {
  margin-top: 20rpx;
}

.list-item-footer {
  font-size: 26rpx;
  position: relative;
  line-height: 88rpx;
  height: 88rpx;
  color: #666;
}

.list-item-footer::after {
  content: " ";
  position: absolute;
  left: -60rpx;
  right: 0rpx;
  top: 0;
  height: 1px;
  border-bottom: 1px dashed #e6e6e6;
}

.sum-wrap {
  position: relative;
  background-color: #fff;
  align-items: center;
  padding: 0 30rpx;
  height: 120rpx;
  font-size: 26rpx;
}

.sum-wrap::after {
  content: " ";
  position: absolute;
  left: 0rpx;
  right: 0rpx;
  top: 0;
  height: 1px;
  border-bottom: 1px solid #e6e6e6;
}

.sum-wrap .sum {
  font-size: 34rpx;
  -webkit-box-flex: 3;
  -webkit-flex: 3;
  flex: 3;
}

.sum-wrap .aomout {
  -webkit-box-flex: 2;
  -webkit-flex: 2;
  flex: 2;
}

.sum-wrap .f1{
  font-size: 32rpx;
  color: #ffaf23;
}