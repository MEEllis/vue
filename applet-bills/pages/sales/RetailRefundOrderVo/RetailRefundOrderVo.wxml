            <view class="weui-flex">
              <text class="">数量</text>
              <view class="weui-flex__item tr">
                {{numberFr.formatNum(item.businessCount)}}
              </view>
            </view>
            <view class="weui-flex">
              <text class="">原单收款</text>
              <view class="weui-flex__item tr">
                {{numberFr.formatNum(item.receivedAmount,2)}}
              </view>
            </view>
            <view class="weui-flex">
              <text class="">退款金额</text>
              <view class="weui-flex__item tr">
