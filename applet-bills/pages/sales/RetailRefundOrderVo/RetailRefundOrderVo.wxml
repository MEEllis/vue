              </view>
            </view>
            <view class="weui-flex">
              <text class="">商品名称</text>
              <view class="weui-flex__item tr">
                {{numberFr.stringNull(item.goodsName)}}
              </view>
            </view>
            <view class="weui-flex">
              <text class="">手机串号</text>
              <view class="weui-flex__item tr">
                {{numberFr.stringNull(item.phoneImei)}}
              </view>
            </view>
            <view class="weui-flex">
              <text class="">有限期限</text>
              <view class="weui-flex__item tr">
