              <view class="weui-flex__item tr">
                {{numberFr.stringNull(item.businessNo)}}
              </view>
            </view>
            <view class="weui-flex">
              <text class="">电话号码</text>
              <view class="weui-flex__item tr">
                {{numberFr.stringNull(item.telephone)}}
              </view>
            </view>
            <view class="weui-flex">
              <text class="">手机串号</text>
              <view class="weui-flex__item tr">
                {{numberFr.stringNull(item.phoneImei)}}
