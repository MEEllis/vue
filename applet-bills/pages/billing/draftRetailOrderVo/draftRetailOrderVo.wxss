.cate-wrap {
  background-color: #fff;
  white-space: nowrap;
  padding: 20rpx 30rpx;
}

.cate-wrap .btn {
  font-size: 26rpx;
  border: none;
  background-color: #efeff4;
  border-radius: 6rpx;
  line-height: 60rpx;
  height: 60rpx;
  padding: 0;
  text-align: center;
}

.cate-wrap .weui-flex__item {
  margin-right: 20rpx;
}

.cate-wrap .weui-flex__item:last-child {
  margin-right: 0;
}

.cate-wrap .btn.on {
  background-color: rgba(71, 110, 201, 0.15);
}

.cate-wrap .btn::after {
  border: none !important;
}

.list-wrap {
}

.list-item {
  background-color: #fff;
}

.time {
  font-size: 22rpx;
  color: rgba(51, 51, 51, 0.8);
}

.list-item-body .weui-flex {
  align-items: center;
}

.remark {
  font-size: 28rpx;
  color: #8c8c8c;
}

.list-item-title {
  padding: 20rpx 30rpx;
}

.list-item-body {
  padding: 0 30rpx 20rpx ;
}

.list-item-footer {
  background-color: #f7f7f7;
  padding: 20rpx 30rpx;
  color: #8c8c8c;
  font-size: 28rpx;
  position: relative;
}

.list-item-footer::after {
  content: " ";
  position: absolute;
  right: 0;
  left: 0;
  top: 0;
  height: 1px;
  border-top: 1px dashed #e6e6e6;
}


.good-item {
  position: relative;
}
.good-item-wrap {
  position: relative;
  z-index: 2;
  background-color: #fff;
}

.posit {
  position: absolute;
  top: 0;
  background-color: #e64340;
  width: 80px;
  text-align: center;
  z-index: 1;
  right: 0;
  bottom: 0;
  color: #fff;
  align-items: center;
}

