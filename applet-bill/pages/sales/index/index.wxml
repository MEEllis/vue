<view class="container">
  <wxs src="../../../filter/numberFr.wxs" module="numberFr"></wxs>
  <view class="weui-tab">
    <!-- tab 头部 -->
    <view class="weui-navbar">
      <block wx:for="{{tabs}}" wx:key="*this">
        <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
          <view class="weui-navbar__title">{{item}}</view>
        </view>
      </block>
      <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
    </view>
    <!-- tab 内容 -->
    <view class="weui-tab__panel">
      <view class="weui-tab__content" hidden="{{activeIndex != 0}}">选项一的内容</view>
      <view class="weui-tab__content" hidden="{{activeIndex != 1}}">
        <view class="weui-flex  cate-wrap">
          <button class="weui-flex__item  {{activeIndex2 == index ? 'on' : ''}}" data-index="{{index}}" wx:for="{{tabContent2}}" wx:key="*this" bindtap="tabContent2Click">
            {{item}}
          </button>
        </view>
        <view class="sel-time">
          查询时间:{{startTime2==endTime2?startTime2:(startTime2+'至'+endTime2)}}
        </view>
        <view class="table-wrap">
