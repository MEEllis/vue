//js控制千分位
function formatNum(num, n){
  num = Number(num)
  num = (num.toFixed(n));
  var re = getRegExp('(-?\d+)(\d{3})');
  while (re.test(num)) {
    num = num.replace(re, "$1,$2");
  }
  return num;  
}

function stringEllipsis(str, n) {
  n = Number(n||18)
  if (str.length > n){
    str = str.substring(0, n-1)+'...';
  }
  return str;
}


module.exports = {
  formatNum: formatNum,
  stringEllipsis: stringEllipsis
}

